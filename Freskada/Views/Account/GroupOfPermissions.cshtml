<h3 class="text-dark mb-4">Groups Of Permissions</h3>

<div class="card shadow">
    <div class="card-header">
        <div class="row p-1">
            <p class="text-primary m-0 fw-bold col-3">Groups Info</p>
            <a asp-action="UpsertGroupOfPermissions" class="btn btn-outline-info offset-8 col-1">Add</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table" id="t_group_permissions" style="width: 100%">
            <thead class="mt-1">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Number Of Users</th>
                    <th scope="col"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/groupOfPermissions.js" asp-append-version="true"></script>
}