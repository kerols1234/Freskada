@model Booking

<h3 class="text-dark mb-4">Bookings</h3>

<div class="card shadow">
    <div class="card-header">
        <div class="row p-1">
            <p class="text-primary m-0 fw-bold col-3">Bookings Info</p>
            <button type="button" class="btn btn-outline-info offset-8 col-1" data-bs-toggle="modal" data-bs-target="#bookingForm">Add</button>
            <div class="modal fade" id="bookingForm" tabindex="-1" aria-labelledby="bookingFormLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="bookingFormLabel">Add Booking</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <form class="col-12 pb-2" asp-action="Upsert" method="post">
                                    <div class="card custom-card">
                                        <div class="card-body">
                                            <div class="row">
                                                <input asp-for="Id" hidden class="form-control" type="text">
                                                <input asp-for="UserId" hidden class="form-control" type="text">
                                                <div class="form-group col-3">
                                                    <label asp-for="DoctorId">Doctor</label>
                                                    <select asp-for="DoctorId" asp-items="@ViewBag.selectListItemsOfDoctors" class="form-select"></select>
                                                </div>
                                                <div class="form-group col-3">
                                                    <label asp-for="PatientId">Patient</label>
                                                    <select asp-for="PatientId" asp-items="@ViewBag.selectListItemsOfPatients" class="form-select"></select>
                                                </div>
                                                <div class="form-group col-6 mb-2">
                                                    <label asp-for="Date"></label>
                                                    <input asp-for="Date" class="form-control" />
                                                    <span asp-validation-for="Date" class="text-danger"></span>
                                                </div>
                                                <div class="form-group col-12 mb-2">
                                                    <label asp-for="Note"></label>
                                                    <textarea asp-for="Note" rows="4" class="form-control"></textarea>
                                                    <span asp-validation-for="Note" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-white text-end">
                                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" id="formSubmint" class="btn btn-outline-info">Create</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table" id="t_booking" style="width: 100%">
            <thead class="mt-1">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Patient Name</th>
                    <th scope="col">Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
        </table>
        <div class="modal fade" id="bookingsDetails" tabindex="-1" aria-labelledby="bookingDetailsLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="bookingDetailsLabel">Booking Details</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-striped m-0" id="bookingDetails">
                            <tbody>
                                <tr>
                                    <th scope="row">ID</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="col">Doctor Name</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="col">Patient Name</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="col">Date</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Note</th>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/booking.js" asp-append-version="true"></script>
}